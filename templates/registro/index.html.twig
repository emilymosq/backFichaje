{% extends 'base.html.twig' %}

{% block title %}
{{parent()}} - Registro {% endblock %}

{% block body %}
    {{ parent() }}
    {% for message in app.flashes('exito') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <center>
    <div class="container h-100 ">
        <div class="row h-80 justify-content-center align-items-center ">
            <div class="col-6 bg-white rounded my-3 p-3">
                <h1>Registro</h1>
                {{ form(formulario) }}

            </div>
        </div>
    </div>
{% endblock %}
